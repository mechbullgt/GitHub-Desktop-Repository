            @*@Html.ActionLink("Edit", "Edit", new { id=item.campaign_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.campaign_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.campaign_id })*@
        </td>
    </tr>
}

